#!/bin/bash

xinput set-prop "Elan TrackPoint" "Device Enabled" 1
xinput set-prop "Elan TrackPoint" "libinput Accel Profile Enabled" 1 0 0
xinput set-prop "Elan TrackPoint" "libinput Accel Speed" 0.10
xinput set-prop "Elan TrackPoint" "libinput Natural Scrolling Enabled" 0
xinput set-prop "Elan TrackPoint" "libinput Horizontal Scroll Enabled" 1
xinput set-prop "Elan TrackPoint" "libinput Scroll Method Enabled" 0 0 1
xinput set-prop "Elan TrackPoint" "libinput Button Scrolling Button" 2
xinput set-prop "Elan TrackPoint" "libinput Button Scrolling Button Lock Enabled" 0
xinput set-prop "Elan TrackPoint" "libinput Left Handed Enabled" 0

xinput set-prop "Elan Touchpad" "Device Enabled" 1
xinput set-prop "Elan Touchpad" "Device Accel Profile" 1
xinput set-prop "Elan Touchpad" "Device Accel Constant Deceleration" 2.5
xinput set-prop "Elan Touchpad" "Device Accel Adaptive Deceleration" 1
xinput set-prop "Elan Touchpad" "Device Accel Velocity Scaling" 12.5
xinput set-prop "Elan Touchpad" "Synaptics Tap Action" 2 3 1 0 0 0 0
xinput set-prop "Elan Touchpad" "Synaptics Click Action" 1 3 2
xinput set-prop "Elan Touchpad" "Synaptics Two-Finger Scrolling" 1 1
xinput set-prop "Elan Touchpad" "Synaptics Scrolling Distance" -173 -173
xinput set-prop "Elan Touchpad" "Synaptics Gestures" 1
xinput set-prop "Elan Touchpad" "Synaptics Palm Detection" 1
