{
	"layer": "top",
	"position": "top",
	"mode": "dock",
	"exclusive": true,
	"fixed-center": true,
	"passthrough": false,
	"ipc": true,
	"gtk-layer-shell": true,
	"id": "waybar",
	"height": 0,
	"spacing": 0,
	"margin": 0,
	"reload_style_on_change": true,
	"font": "JetBrainsMono Nerd Font 10",

	"include": [
		"~/.config/waybar/modules/tray",
		"~/.config/waybar/modules/clock",
		"~/.config/waybar/modules/mpris",
		"~/.config/waybar/modules/pulseaudio",
		"~/.config/waybar/modules/backlight",
		"~/.config/waybar/modules/battery",
		"~/.config/waybar/modules/bluetooth",
		"~/.config/waybar/modules/network",
		"~/.config/waybar/modules/hyprland/workspaces",
		"~/.config/waybar/modules/hyprland/window",
		"~/.config/waybar/modules/hyprland/language",
		"~/.config/waybar/modules/custom/distro",
		"~/.config/waybar/modules/custom/weather",
		"~/.config/waybar/modules/custom/notifications",
		"~/.config/waybar/modules/group/session",
		"~/.config/waybar/modules/group/resources",
		"~/.config/waybar/modules/custom/pacman"
	],

	"modules-left": [
		"group/session",
		"hyprland/language",
		"tray",
		"hyprland/workspaces",
		"hyprland/window"
	],

	"modules-center": ["clock", "custom/weather"],

	"modules-right": [
		"mpris",
		"pulseaudio",
		"backlight",
		"battery",
		"group/resources",
		"bluetooth",
		"network",
		"custom/pacman",
		"custom/notifications"
	]
}
